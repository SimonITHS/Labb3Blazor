    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    table, th, td {
        border: 1px solid #ccc;
        border-collapse: collapse;
        padding: 8px;
    }

    h1, h2 {
        margin-bottom: 10px;
    }

    p, table {
        margin-bottom: 20px;
    }
</style>
